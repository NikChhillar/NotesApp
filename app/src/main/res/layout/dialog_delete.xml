<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#ABABAB"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#555252"
        android:text="Are u sure want to delete\n this note..?"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:padding="10dp"
        android:id="@+id/dialogDeleteYes"
        android:background="@drawable/yes_btn"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/acme"
        android:text="Yes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/acme"
        android:id="@+id/dialogDeleteNo"
        android:padding="10dp"
        android:background="@drawable/no_btn"
        android:textSize="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="No"/>

</LinearLayout>